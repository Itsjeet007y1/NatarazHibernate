<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping
  PUBLIC "-//Hibernate?Hibernate Mapping DTD//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="com.app.domain.InsurancePolicy" table="INSURANCE_POLICY" lazy="true" proxy="com.app.domain.IInsurancePolicy">
    <!-- singular Id Field-->
    <id name="policyId" column="POLICYID"/>
    <property name="policyName" column="POLICTYNAME"/>
    <property name="tenure" column="TENURE"/>
    <property name="premium" column="PREMIUM"/>
  </class>

</hibernate-mapping>  