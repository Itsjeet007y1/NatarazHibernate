	<class name="com.app.domain.Person" table="INHM_Person3">
		<id name="id">
			<generator class="increment" />
		</id>
		<property name="name" type="string" length="15" />
		<property name="company" type="string" length="15" />
	</class>
	<class name="com.app.domain.Employee" table="INHM_employee3">
		<id name="id">
			<generator class="increment" />
		</id>
		<property name="name" type="string" length="15" />
		<property name="company" type="string" length="15" />
		<property name="desg" type="string" length="15" />
		<property name="salary" type="float" length="10" precision="2" />
	</class>
	<class name="com.app.domain.Customer" table="INHM_customer3">
		<id name="id">
			<generator class="increment" />
